
<body>
 <% @flats.each do |flat| %>
 <div class="box">
   <div class="container mt-4">
    <div class="class d-flex justify-content-between align-items-center">
      <div class="row">
        <div class="col-4">
          <div class= "row">
            <div class="card" style="width: 36rem;">
              <img src="..." class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= flat.name %></h5>
                <p class="card-text"><%= flat.description %></p>
                <p class="card-text"><%= flat.address %></p>
                <%= link_to 'More Info', flat_path(flat), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
</body>


<h4><%= link_to 'list your flat', new_flat_path, class: "btn btn-primary"%></h4>
